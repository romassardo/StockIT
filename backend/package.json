{
  "name": "inventario-it-backend",
  "version": "1.0.0",
  "description": "Sistema de inventario y control de stock para el sector de Soporte IT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:check": "ts-node src/database/db-check.ts",
    "db:verify-schema": "ts-node src/database/verify-schema.ts",
    "migrate:up": "ts-node src/database/run-migrations.ts",
    "migrate:seed": "ts-node src/database/run-seeds.ts"
  },
  "dependencies": {
    "@types/winston": "^2.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^10.0.0",
    "typescript": "^5.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/ms": "^2.1.0",
    "@types/mssql": "^8.1.2",
    "@types/node": "^18.19.104",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "bcryptjs": "^3.0.2",
    "eslint": "^8.38.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.2"
  }
}
